{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="w-full max-w-4xl bg-white p-6 rounded-lg shadow-lg">
            <h1 class="text-center text-[#219CFF] font-bold text-3xl mb-6">Categorie</h1>

            <table class="table-auto w-full bg-white shadow-lg rounded-lg">
                <thead>
                    <tr class="bg-[#219CFF] text-white">
                        <th class="px-4 py-2">Id</th>
                        <th class="px-4 py-2">Nom</th>
                        <th class="px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr class="hover:bg-[#f1f9ff]">
                        <td class="text-center py-2">{{ categorie.id }}</td>
                        <td class="text-center py-2">{{ categorie.nom }}</td>
                        <td class="text-center py-2">
                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="inline-block bg-[#219CFF] text-white py-2 px-4 rounded-lg hover:bg-[#1780D2] transition duration-300 mx-2">
                                Show
                            </a>
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="inline-block bg-[#219CFF] text-white py-2 px-4 rounded-lg hover:bg-[#1780D2] transition duration-300 mx-2">
                                Edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-4 text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="mt-6 text-center">
                <a href="{{ path('app_categorie_new') }}" class="inline-block bg-[#219CFF] text-white py-2 px-6 rounded-lg hover:bg-[#1780D2] transition duration-300">
                    Create new
                </a>
            </div>
        </div>
    </div>
{% endblock %}
